<Configurations>
  <!--The desired length of features vector to be considered from the N-gram languge model. "Full" means the whole language model-->
  <FeaturesVectorLength featuresVectorLength="Full"></FeaturesVectorLength> 
  <!--Set to true if the used package is LibSVM-->
  <LibSVMFormat libSVMFormat="true"></LibSVMFormat>
  <!--Set to true if the language model enables stemming-->
  <EnableStemming enableStemming="false"></EnableStemming>
  <!--Format of features presentation. Normal means count of each feature divided by number of words per item. Binary means 1 if the word exists and 0 otherwise (so count is not taken into consideration)-->
  <FeatureFormat featureFormat="Normal"></FeatureFormat> 
   <!--Set to true if a database of relevant/irrelevant links in tweets is considered-->
  <ConsiderLinksDB considerLinksDB="false"></ConsiderLinksDB>
   <!--Set to true if numbers features in tweets is considered-->
  <ConsiderNumbersFeatures considerNumbersFeatures="true"></ConsiderNumbersFeatures>  
  <!--Set to true if the contents of the link is needed to update the features vector-->
  <ParseLinkBody parseLinkBody="false"></ParseLinkBody>
   <!--Set to true to remove trailing and leading #tags-->
  <RemoveLeadTrailTags removeLeadTrailTags="false"></RemoveLeadTrailTags>
  <!--Mapping of labels to indices for libsvm format. Indices are 1 based so 0 is not permitted-->
  <Label label="relevant"></Label>
  <Label label="irrelevant"></Label>>
  <Range NumberLimitFrom="6000.00" NumberLimitTo="12,500.00"></Range>
</Configurations>